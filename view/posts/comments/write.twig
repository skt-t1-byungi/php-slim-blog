{% with %}
    {% set id = 'write-comment' %}
    {% set post_id = post.id %}
    {% set action = path_for('comments.create') %}
    {% set placeholder = '댓글을 남겨주세요. 회원가입 없이 sns계정으로 댓글을 남길 수 있습니다.' %}
    {% set errors = old_input('action') == 'create'? errors.comment %}
    {% set comment = errors ? old_input('comment') %}

    {% embed 'posts/comments/editor.twig' %}
        {% block fields %}
            {# @hack : 에러 핸들링할 때, 폼형식이 유사한 edit,create,reply을 action 필드를 추가해서 구분합니다. #}
            <input name="action" type="hidden" value="create">
        {% endblock %}
    {% endembed %}
{% endwith %}